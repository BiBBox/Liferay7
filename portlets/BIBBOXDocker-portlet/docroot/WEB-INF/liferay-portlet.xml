<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 7.0.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_7_0_0.dtd">

<liferay-portlet-app>
	
	<portlet>
		<portlet-name>application-store</portlet-name>
		<icon>/icon.png</icon>
		<configuration-action-class>at.graz.meduni.bibbox.liferay.portlet.ApplicationStoreConfig</configuration-action-class>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>application-store-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>bibboxjscontainer</portlet-name>
		<icon>/icon.png</icon>
		<configuration-action-class>at.graz.meduni.bibbox.liferay.portlet.BibboxJsContainerConfig</configuration-action-class>
		<friendly-url-mapper-class>com.liferay.portal.kernel.portlet.DefaultFriendlyURLMapper</friendly-url-mapper-class>
		<friendly-url-mapping>bibboxjscontainer</friendly-url-mapping>
		<friendly-url-routes>at/graz/meduni/bibbox/liferay/portlet/bibboxjscontainer-friendly-url-routes.xml</friendly-url-routes>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>bibboxjscontainer-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>schedular</portlet-name>
		<icon>/icon.png</icon>
		<scheduler-entry>
			<scheduler-event-listener-class>at.graz.meduni.bibbox.liferay.schedular.Schedular</scheduler-event-listener-class>
			<trigger>
				<simple>
					<simple-trigger-value>5</simple-trigger-value>
					<time-unit>second</time-unit>
				</simple>
			</trigger>
		</scheduler-entry>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>schedular-portlet</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>activity</portlet-name>
		<icon>/icon.png</icon>
		<configuration-action-class>at.graz.meduni.bibbox.liferay.portlet.ActivityConfig</configuration-action-class>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>activity-portlet</css-class-wrapper>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>